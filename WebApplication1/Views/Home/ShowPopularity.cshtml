@model WebApplication1.Models.FArticleVM

@{
	ViewBag.Title = "ShowPopularity";
}

<h2>ShowPopularity</h2>
@{ int rank = 1; }
<div class="table-responsive">
	<table class="table table-hover">
		@if (!Model.DataList.Count.Equals(0))
		{
			<thead>
				<tr>
					<th>排名</th>
					<th>@Html.DisplayNameFor(model => model.DataList[0].Title)</th>
					<th>@Html.DisplayNameFor(model => model.DataList[0].Account)</th>
					<th>@Html.DisplayNameFor(model => model.DataList[0].CreateTime)</th>
					<th>@Html.DisplayNameFor(model => model.DataList[0].Watch)</th>
				</tr>
			</thead>

			foreach (var item in Model.DataList)
			{
				<tr>
					<td>
						@rank
						@{ rank++; }
					</td>
					<td>@Html.ActionLink(item.Title, "Article", new { Id = item.AId }) </td>
					<td>@item.Members.Name</td>
					<td>@item.CreateTime</td>
					<td>@item.Watch</td>
				</tr>
			}
		}
		else
		{
			<tr><td colspan="4">尚未有文章</td></tr>
		}
	</table>
	@Html.ActionLink("返回文章列表", "Index")
</div>